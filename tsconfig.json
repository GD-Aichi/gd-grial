
{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["es2016", "dom", "es2017", "esnext.asynciterable"],
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "removeComments": false
  },
  "include": [
    "src/index.ts",
    "src/**/*",
    "packages/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
